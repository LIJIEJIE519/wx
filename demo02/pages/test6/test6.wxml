<!--pages/main01/mindex01.wxml-->
<view class="container">
  <view style="height: 60px;"></view>
  <view style="margin: 40px; font-size: 32px;">{{question_tile}}</view>

  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class="page-section page-section-gap">
      <view class='naire'>
        <view class='question' style="font-size: 26px;">{{question}}</view>
        <view class="line"></view>
        <radio-group class='radio-group'  name="radio">
          <label style="font-size: 28px; float: left;margin-left: 15%;" ><radio value="1" />是</label>
          <label style="font-size: 28px; margin-left: 40rpx;"><radio value="0" />否</label>
        </radio-group>
      </view>
    </view>

    <view class="btn-area" style="margin-top: 30%;margin-bottom: 20%;">
      <button formType="submit"
       class="weui-btn weui-btn_primary" style="font-size: 26px;">开始诊断</button>
    </view>
  </form>
    
</view>
