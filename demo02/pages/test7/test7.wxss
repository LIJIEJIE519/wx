@import "/page/common/lib/weui.wxss";
page{
  background-color: var(--weui-BG-1);
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
  color: var(--weui-FG-0);
}
.page-head{
  padding: 30rpx 30rpx 10rpx;
  text-align: center;
}
.page-head-title {
  display: inline-block;
  padding: 0 40rpx 20rpx 40rpx;
  font-size: 60rpx;
}
.page-head-line{
  margin: 0 auto;
  width: 150rpx;
  height: 2rpx;
  background-color: var(--weui-FG-1);
}
.page-head-desc{
  /* color: cornflowerblue; */
  display: inline-block;
  font-size: 52rpx;
}
.page-body {
  width: 100%;
  flex-grow: 1;
  overflow-x: hidden;
}

.page-section{
  width: 100%;
  margin-bottom: 60rpx;
}
.page-section_center{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.page-section:last-child{
  margin-bottom: 0;
}

.page-section-spacing{
  box-sizing: border-box;
  padding: 0 40rpx;
}


button{
  margin: 40rpx 0;
}
.text-box{
  margin-bottom: 70rpx;
  padding: 10rpx 20rpx;
  display: flex;
  min-height: 300rpx;
  background-color: #FFFFFF;
  justify-content: center;
  align-items: center;
  /* text-align: center; */
  font-size: 52rpx;
  color: #353535;
  line-height: 2em;
}