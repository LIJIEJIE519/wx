<view class="container" style="padding: 10rpx 0">
  <view>
    <button type="primary" bindtap="togglePosition">切换摄像头</button>
  </view>
  <view class="page-body">
  <view style="margin: 10rpx 0;">欢迎来到老中医，很高兴为您服务！</view>

    <view class="page-body-wrapper">
      <camera
        flash="off"
        device-position="{{position}}"
        binderror="error">
      </camera>


      <view class="btn-area">
        <button type="primary" bindtap="takePhoto">拍照</button>
      </view>

      <view>
        <navigator url="../test3/test3">
          <a class="weui-btn weui-btn_disabled weui-btn_primary">下一步</a>
        </navigator>
      </view>

      <image wx:if="{{tongue_src}}" mode="widthFix" class="photo" src="{{tongue_src}}"></image>
    </view>
  </view>

</view>
