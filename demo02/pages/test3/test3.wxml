<!--pages/main01/mindex01.wxml-->
<view class="page__bd">
  <view class="weui-article">
    <view class="" style=" display: flex;align-items: center;justify-content: center; font-size: 32px;">
      第二步：“问”
    </view>
  </view>
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class="page-section page-section-gap">
      <view class='naire'
      wx:for="{{qnaire}}">
        <view style="font-size: 28px;" class='question'>{{item.question}}</view>
        <view class="line"></view>
        <radio-group class='radio-group' name='answer{{index}}' bindchange='radioChange'>
          <view class="radio" wx:for="{{option}}" wx:for-item="select">
              <label style="font-size: 28px;"><radio value="{{select.value}}" />{{select.name}}</label>
          </view>
        </radio-group>
      </view>
    </view>
    <view class="btnNext">
      <button formType="submit" type="primary" class="cbutton" style="width:300rpx;">下一步</button>
      <!-- <navigator url="/pages/main03/mindex03" class="btnNav">
        <button formType="submit" type="primary" class="cbutton" style="width:300rpx;">下一步</button>
      </navigator>-->
    </view> 
  </form>
    
</view>
